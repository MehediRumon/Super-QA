@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-shield-check me-2"></i>SuperQA - AI-Powered QA Automation</h5>
            <div class="d-flex align-items-center gap-3">
                <button id="theme-toggle-btn" class="btn btn-sm btn-outline-light" @onclick="ToggleTheme" title="Toggle theme">
                    <i class="bi bi-sun-fill"></i>
                </button>
                <a href="https://github.com/MehediRumon/Super-QA" target="_blank" style="color: white; text-decoration: none;">
                    <i class="bi bi-github me-1"></i>GitHub
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task ToggleTheme()
    {
        await JSRuntime.InvokeVoidAsync("themeManager.toggleTheme");
    }
}
