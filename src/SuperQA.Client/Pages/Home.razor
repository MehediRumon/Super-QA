@page "/"

<PageTitle>Super-QA Dashboard</PageTitle>

<div class="container-fluid py-4">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <i class="bi bi-robot me-2"></i>AI-Powered Playwright Test Automation
        </h1>
        <p class="lead text-muted mt-3">
            Write code, generate tests, and heal failures with AI assistance
        </p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card h-100">
                <div class="card-header py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-code-square me-2"></i>Code Editor
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="card-text mb-4">
                        Write Gherkin steps with locators, generate Playwright test scripts, and heal failures automatically with AI.
                    </p>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill me-2" style="color: var(--accent-secondary);"></i>
                            AI-powered test generation from Gherkin steps
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill me-2" style="color: var(--accent-secondary);"></i>
                            Automatic AI healing on test failures
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill me-2" style="color: var(--accent-secondary);"></i>
                            Execute tests and view results instantly
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill me-2" style="color: var(--accent-secondary);"></i>
                            Save and manage test scripts
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-check-circle-fill me-2" style="color: var(--accent-secondary);"></i>
                            Modern code editor experience
                        </li>
                    </ul>
                    <a href="/code-editor" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-play-circle me-2"></i>Get Started
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-5">
            <div class="card h-100">
                <div class="card-header py-3">
                    <h4 class="mb-0">
                        <i class="bi bi-gear-fill me-2"></i>Settings
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="card-text mb-4">
                        Configure your SuperQA preferences including API keys, AI models, and browser settings.
                    </p>
                    <ul class="list-unstyled mb-4">
                        <li class="mb-2">
                            <i class="bi bi-shield-check me-2" style="color: var(--accent-primary);"></i>
                            Secure API key storage
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-shield-check me-2" style="color: var(--accent-primary);"></i>
                            AI model selection
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-shield-check me-2" style="color: var(--accent-primary);"></i>
                            Browser mode configuration
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-shield-check me-2" style="color: var(--accent-primary);"></i>
                            Auto-load preferences
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-shield-check me-2" style="color: var(--accent-primary);"></i>
                            Save time on every test
                        </li>
                    </ul>
                    <a href="/settings" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-sliders me-2"></i>Configure Now
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-4">
                    <h3 class="card-title mb-4">
                        <i class="bi bi-info-circle me-2"></i>How It Works
                    </h3>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background: var(--accent-primary); color: white;">
                                    <i class="bi bi-1-circle-fill fs-3"></i>
                                </div>
                                <h5>Configure Settings</h5>
                                <p class="text-muted small">Set your OpenAI API key and preferences</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background: var(--accent-secondary); color: white;">
                                    <i class="bi bi-2-circle-fill fs-3"></i>
                                </div>
                                <h5>Write Gherkin Steps</h5>
                                <p class="text-muted small">Write test steps with locators in the code editor</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background: var(--accent-primary); color: white;">
                                    <i class="bi bi-3-circle-fill fs-3"></i>
                                </div>
                                <h5>Generate & Execute</h5>
                                <p class="text-muted small">AI creates and runs your Playwright test scripts</p>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center">
                                <div class="feature-icon rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 60px; height: 60px; background: var(--accent-warning); color: white;">
                                    <i class="bi bi-4-circle-fill fs-3"></i>
                                </div>
                                <h5>Heal with AI</h5>
                                <p class="text-muted small">If test fails, AI automatically fixes it</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-lightning-charge-fill" style="font-size: 2.5rem; color: var(--accent-warning);"></i>
                    <h5 class="mt-3">Fast Test Creation</h5>
                    <p class="text-muted small">Generate tests in seconds with AI assistance</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-code-square" style="font-size: 2.5rem; color: var(--accent-primary);"></i>
                    <h5 class="mt-3">Production Ready</h5>
                    <p class="text-muted small">Get clean, executable C# Playwright code</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-magic" style="font-size: 2.5rem; color: var(--accent-secondary);"></i>
                    <h5 class="mt-3">AI Healing</h5>
                    <p class="text-muted small">Automatically fix test failures with AI</p>
                </div>
            </div>
        </div>
    </div>
</div>
