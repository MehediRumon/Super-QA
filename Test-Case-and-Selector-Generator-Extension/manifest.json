{
  "manifest_version": 3,
  "name": "SuperQA Test Case and Selector Generator",
  "version": "1.0.0",
  "description": "Record user interactions and generate Gherkin test cases with locators for SuperQA",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:7001/*",
    "https://localhost:7001/*",
    "http://localhost:5001/*",
    "https://localhost:5001/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
